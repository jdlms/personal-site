---
import Profile from "./Profile.astro";
import Links from "./Links.astro";
---

<div class="container">
  <div id="wrapper">
    <Profile />
    <div id="contact-links-wrapper">
      <a href="mailto:lamorey.joshua@gmail.com"
        >Get in touch</a
      >
      <div id="links-container">
        <Links />
      </div>
    </div>
  </div>
</div>

<style>
  a {
    @apply bg-my-background border border-my-accent focus:outline-none focus:ring-4 focus:ring-gray-700 font-normal rounded-lg text-sm px-5 py-2.5 mb-2 text-my-off-white;
  }
  #contact-links-wrapper {
    @apply flex flex-col items-center;
  }

  #links-container {
    @apply inline;
  }
  #wrapper {
    @apply flex items-center justify-center mb-12;
  }
</style>
