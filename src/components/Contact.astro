---
import Profile from "./Profile.astro";
import Links from "./Links.astro";
---

<div class="container">
  <Profile />
</div>
<Links />

<style>
  .container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin-bottom: 2rem;
  }

  #button {
    @apply border border-blue-500 text-blue-500 hover:bg-blue-100 hover:text-blue-700 py-2 px-4;
  }

  #button {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  a {
    --primary: #ff6b6b;
  }
</style>
